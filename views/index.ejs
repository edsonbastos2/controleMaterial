<%- include('./partials/header')%>
  <%- include('./partials/homeNavbar')%>

    <body>
      <div class="jumbotron jumbotron-fluid">
        <div class="container">
          <h1 class="display-4">Bem-vindo</h1>
          <p class="lead text-danger">Sistema de estoque em fase teste</p>
        </div>
      </div>
      <div class="container">
        <div class="tableLocal">
          <table class="table table-hover table table-bordered">
            <thead>
              <tr>
                <th scope="col">Equipamento</th>
                <th scope="col">Modelo</th>
                <th scope="col">Tombamento</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Colaborador</th>
                <th scope="col">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% patrimonies.forEach( item=> {%>
                <tr>
                  <td>
                    <%= item.nome%>
                  </td>
                  <td>
                    <%= item.modelo%>
                  </td>
                  <td>
                    <%= item.tombamento%>
                  </td>
                  <td>
                    <%= item.quantidade%>
                  </td>
                  <td>
                    <%= item.employee.nome%>
                  </td>
                  <td class="d-flex justify-content-center">
                    <a class="btn btn-secondary" href="/description/<%= item.id%>">Mais</a>
                  </td>
                </tr>
                <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </body>

    <%- include('./partials/footer')%>